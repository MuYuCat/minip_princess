.record_image {
  width: 400rpx;
  height: 400rpx;
  margin-top: 300rpx;
  margin-left: 80rpx;
}


.tip {
  font-size: 23rpx;
  color: rgba(0, 0, 0, 0.5);
  width: 90%;
  text-align: center;
  margin: 30rpx auto 0 auto;
}

.top_tip {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.5);
  width: 90%;
  text-align: left;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.box_text {
  background-color: white;
  text-align: center;
  padding: 300rpx 0;
  margin-top: 30rpx;
  color: rgba(0, 0, 0, 0.5);
}

.code_box {
  text-align: center;
  margin-top: 30rpx;
  padding-top: 17rpx;
  margin-bottom: 80rpx;
}

.code_box_title {
  color: rgba(0, 0, 0, 0.5);
  font-size: 26rpx;
  margin-bottom: 20rpx;
  text-align: left;
}

.code_box_record {
  width: 80%;
  height: 200rpx;
  margin-left: 8%;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
  background-color:bisque;
}

.code_box_record_title_content {
  width: 50%;
}

.code_box_record_title_number {
  width: 20%;
}

.code_box_record_title_time {
  width: 30%;
}

.code_box_record_detail_mission {
  color: #07c160;
}

.code_box_record_detail_goods {
  color: #e20808;
}

.code_box_record_detail_content {
  margin-left: 200rpx;
  display: inline-block;
}

.code_box_record_detail_number {
  margin-left: 200rpx;
  display: inline-block;
}

.code_box_record_detail_time {
  margin-left: 200rpx;
  display: inline-block;
}

.button {
  width: 120rpx;
  text-align: center;
  margin: 0 auto 0 auto;
  height: 50rpx;
  color: white;
  border-radius: 5px;
  line-height: 50rpx;
  background-color: #07c160;
}

.button_disabled {
  /* color: #555555; */
  background-color: #c7cac8;
}

.button_clear {
  width: 300rpx;
  text-align: center;
  margin: 250rpx auto 0 auto;
  height: 80rpx;
  color: #07c160;
  border-radius: 5px;
  line-height: 80rpx;
  background-color: rgba(0, 0, 0, 0.03);
}

.line {
  height: 1rpx;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.1);
}

.image_show {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
}

.item_show {
  display: inline;
  font-weight: 500;
  margin-left: 20rpx;
}

.show_box {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-content: flex-start;
  justify-content: space-evenly;
  align-items: flex-start;
  height: 100%;
}

.finish {
  background-color: #ffeaa7;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
}

.wait {
  background-color: #b2bec3;
  margin-bottom: 20rpx;
  border-radius: 40rpx;
}

.backup_box {
  text-align: center;
  margin-top: 30rpx;
  padding-top: 17rpx;
}