/**index.wxss**/

.container{
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
}

.gold_medal {
  margin-top: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.integral {
  height: 30rpx;
  line-height: 30rpx;
  padding-top: 15rpx;
}
.userIntegral {
  margin-left: 10rpx;
  display: inline;
  font-weight: 500;
}

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
}

.title {
  font-family: PingFang SC;
  font-weight: 500;
  color: #000000;
  font-size: 44rpx;
  margin-bottom: 40rpx;
}

.top_tip {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #888888;
  margin-bottom: 28rpx;
}

.power {
  opacity: 0.8;
  margin-top: 30rpx;
  border-radius: 5px;
  width: 93%;
  padding-bottom: 1rpx;
  overflow-y: auto;
}

.power_info {
  display: flex;
  padding: 30rpx 25rpx;
  align-items: center;
  justify-content: space-between;
}

.power_info_more {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(90deg);
}

.power_info_less {
  width: 30rpx;
  height: 30rpx;
  transform: rotate(270deg);
}

.power_info_text {
  display: flex;
  flex-direction: column;
}

.power_info_text_title {
  margin-bottom: 10rpx;
  font-weight: 400;
  font-size: 35rpx;
}

.power_info_text_tip {
  color: rgba(0, 0, 0, 0.4);
  font-size: 25rpx;
}

.power_item_show {
  margin-bottom: 20rpx;
  border-radius: 40rpx;
}

.power_item {
  height: 150rpx;
  padding: 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
  /* background-color: white; */
}

.power_item_show:nth-of-type(1) {
  background-color: #E889BD;
}
.power_item_show:nth-of-type(2) {
  background-color: #67C2A3;
}
.power_item_show:nth-of-type(3) {
  background-color: #FC8A61;
}
.power_item_show:nth-of-type(4) {
  background-color: #8EA0C9;
}
.power_item_show:nth-of-type(5) {
  background-color: #E889BD;
}

.power_item_title {
  font-size: 30rpx;
  line-height: 150rpx;
}

.power_befor_icon {
  width: 60rpx;
  height: 60rpx;
  margin-top: 40rpx;
}

.power_item_icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 60rpx;
}

.line {
  width: 95%;
  margin: 0 auto;
  height: 2rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.environment {
  color: rgba(0, 0, 0, 0.4);
  font-size: 24rpx;
  margin-top: 25%;
}